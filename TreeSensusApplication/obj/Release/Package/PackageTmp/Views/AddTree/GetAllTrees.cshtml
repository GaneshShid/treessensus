    <div class=" card mytbl border mt-5 ">
        <div class="card-header" style="background: #e3f2fd ">
            <h4 class="text-center">All Trees</h4>
        </div>
        <div class="table-striped">
            <table class=" card-body  table table-bordered " id="bd">
                <thead>
                    <tr>
                        <th>Sr.No</th>
                        <th>Ward No.</th>
                        <th>tree count</th>
                        <th>tree species</th>
                        <th>photo</th>
                        <th>local name</th>
                        <th>lattitude</th>
                        <th>ongitude</th>
                        <th>height</th>
                        <th>canopy</th>
                        <th>tree age</th>
                        <th>status</th>
                        <th>Ownership</th>
                        <th>owner name</th>
                        <th>owner contact</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 1;
                    }

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.ward_no</td>
                            <td>@item.num_of_tree</td>
                            <td>@item.tree_species</td>
                            <td><img src="~/TreePhotos/@item.photo" height="100" width="100" /></td>
                            <td>@item.local_name</td>
                            <td>@item.lattitude</td>
                            <td>@item.longitude</td>
                            <td>@item.height_in_feet</td>
                            <td>@item.canopy_in_feet</td>
                            <td>@item.avg_tree_age</td>
                            <td>@item.tree_status</td>
                            <td>@item.ownership</td>
                            <td>@item.owner_name</td>
                            <td>@item.owner_contact</td>

                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        </div>
