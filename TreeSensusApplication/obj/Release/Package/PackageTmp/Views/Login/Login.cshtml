
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/bootstrap")

    <style>
        #bg {
            width: 100%;
            height: auto;
            background-image: url("/TreeBg/Loginbg.jpg");
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }

        #bd {
            background: #e8cbc0;
            background: -webkit-linear-gradient(to right, #e8cbc0, #636fa4);
            background: linear-gradient(to right, #e8cbc0, #636fa4);
        }
    </style>

</head>
<body id="bg">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                @using (Html.BeginForm())
                {

                    <div class="card">
                        <div class="card-header" style="background: #e3f2fd ">
                            <h4 class="text-center">Login Here</h4>
                        </div>
                        <div class="card-body" id="bd">
                            <div class="mb-3">
                                <label class="mb-3">Email</label>
                                <input type="email" name="txtemail" class="form-control" placeholder="enter email address" required="required" />
                            </div>
                            <div class="mb-3">
                                <label class="mb-3">Password</label>
                                <input type="password" name="txtpassword" class="form-control" placeholder="enter password" required />
                            </div>
                        </div>
                        <div class="card-footer bg-secondary">
                            <input type="submit" value="Submit" class="btn btn-primary" />
                            <button class="btn btn-info"><a href="/Login/AddUser" style="text-decoration:none">Register Here</a></button>
                            <p style="color:red">@ViewBag.msg</p>
                        </div>
                    </div>
                }
            </div>
            
        </div>
    </div>
