@model TreeSensusApplication.Models.tbl_User_Details
@{
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/bootstrap")

    <style>
        #bg {
            width: 100%;
            height: auto;
            background-image: url("/TreeBg/Loginbg.jpg");
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }

        #bd {
            background: #e8cbc0;
            background: -webkit-linear-gradient(to right, #e8cbc0, #636fa4);
            background: linear-gradient(to right, #e8cbc0, #636fa4);
        }
    </style>
</head>
<body id="bg">

    <div class="container mt-5">
        <div class="row justify-content-center">

            <div class="col-md-6">
                @using (Html.BeginForm())
                {

                    <div class="card">

                        <div class="card-header "style="background: #e3f2fd ">
                            <h4 class="text-center"> New Registration.</h4>
                        </div>
                        <div class="card-body" id="bd">
                            <div>
                                <label class="mb-3">User Name</label>
                                @Html.TextBoxFor(e => e.user_name, new { @class = "form-control", @required = "required" })
                            </div>
                            <div class="form-group">
                                <label class="mb-3">Email Address</label>
                                @Html.TextBoxFor(e => e.Email, new { @class = "form-control ", Type = "email", @required = "required" })
                            </div>

                            <div class="form-group">
                                
                                <label class="mb-3">Select Gender</label>
                                <br />
                                Male
                                @Html.RadioButtonFor(e => e.gender, new { @required = "required" })
                                &nbsp;
                                Female
                                @Html.RadioButtonFor(e => e.gender, new { @required = "required" })
                                <br />
                                <br />

                            </div>
                            <div class="form-group">
                                <label class="mb-3">password</label>
                                @Html.TextBoxFor(e => e.password, new { Type = "password", @class = "form-control", @required = "required" })
                            </div>



                        </div>
                        <div class="card-footer bg-secondary ">

                            <button class="btn btn-info float-end"><a href="/Login/Login" style="text-decoration:none"> Go To Login</a></button>
                            <input type="submit" value="submit" class="btn btn-primary float-lg-end" />
                            <br />
                            <h4>@ViewBag.msg</h4>
                        </div>

                    </div>


                }
            </div>

        </div>
    </div>
</body>
</html>


